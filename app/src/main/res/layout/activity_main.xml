<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Reciclagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="34sp"
        android:text="Reciclagem"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdicionarPonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Ponto de Coleta" />

    <Button
        android:id="@+id/btnAdicionarMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Adicionar Material" />


</LinearLayout>
